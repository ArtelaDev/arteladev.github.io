@inherits LayoutComponentBase
<PageTitle>Artela</PageTitle>
<div class="flex flex-col flex-1">
    <div class="flex flex-row justify-between items-center gap-2 p-2 shadow bg-orange-800/25">
        <div class="flex-1 flex flex-col text-white justify-center items-center text-center">
            <span class="text-3xl font-bold">گالری آرت‌الا</span>
            <span class="text-2xl font-500">نقاشی روی چوب</span>
        </div>
        <div class="">
            <img src="/images/baner-e-1.jpg"
                 class="aspect-square h-20 rounded-full border shadow" />
        </div>
    </div>
    <div class="flex flex-col flex-1 shadow overflow-hidden">
        <div class="overflow-auto">
            @Body
        </div>
    </div>
    <div
         class="flex flex-row flex-wrap justify-center items-center gap-2 p-2 shadow bg-orange-800/25 text-white font-bold">
        <div>
            <p class="break-words text-lg text-center">
                جهت سفارش و
                مشاهده کالاهای موجود
                از طریق صفحه اینستاگرام
                با ما در ارتباط باشید
            </p>
        </div>
        <div dir="ltr"
             class="flex flex-row bg-black/50 rounded shadow">
            <a href="https://www.instagram.com/artela.ir"
               class="flex-1 flex flex-row justify-center items-center gap-4 p-2 text-xl">
                <img src="images/instagram.png"
                     class="h-12 shadow" />
                <span class="flex-1 text-2xl">@@artela.ir</span>
            </a>
        </div>
    </div>
    <div class="flex flex-col shadow bg-white/25">
        <span dir="ltr"
              class="flex flex-row flex-wrap p-2 gap-4 rounded justify-center">
            <span>© artela.ir @DateTime.Now.Year</span><span>|</span><a class="text-gray-700"
               href="https://github.com/Alireza2125">Developer: @@alireza2125</a>
        </span>
    </div>
</div>